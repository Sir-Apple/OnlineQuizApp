@page
@model OnlineQuizApp.Pages.Questions.CreateModel
@{
    ViewData["Title"] = "Create Question";
}

<h2>Create New Question</h2>

<form method="post">
    <div class="form-group">
        <label for="questionText">Question Text</label>
        <input type="text" id="questionText" class="form-control" asp-for="Question.Text" />
    </div>

    <div>
        <h4>Answers</h4>
        <ul>
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                <li>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Answers[i].Text" placeholder="Answer Text" />
                        <input type="checkbox" asp-for="Answers[i].IsCorrect" /> Is Correct
                    </div>
                </li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Questions/Index" class="btn btn-secondary">Cancel</a>
</form>