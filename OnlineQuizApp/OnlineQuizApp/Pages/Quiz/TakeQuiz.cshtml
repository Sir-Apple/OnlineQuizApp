@page
@model OnlineQuizApp.Pages.Quiz.TakeQuizModel
@{
    ViewData["Title"] = "Take Quiz";
}

<h2>Take Quiz</h2>

@if (Model.Questions.Count == 0)
{
    <p>No questions available.</p>
}
else
{
    <form method="post">
        @foreach (var question in Model.Questions)
        {
            <div class="form-group">
                <h4>@question.Text</h4>
                @foreach (var answer in question.Answers)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="UserAnswers[@question.Id]" value="@answer.Id" />
                        <label class="form-check-label">@answer.Text</label>
                    </div>
                }
            </div>
        }

        <button type="submit" asp-page-handler="SubmitQuiz" class="btn btn-primary">Submit Quiz</button>
    </form>
}
